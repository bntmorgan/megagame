<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- load default styles and controls -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <useStyles filename="src/resources/layout/custom-console-style.xml" />
  <useStyles filename="nifty-default-styles.xml" />
  <useControls filename="nifty-default-controls.xml" />

  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- start screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <screen id="start" controller="org.insa.megaupload.example.ConsoleDemoStartScreen" defaultFocusElement="name">
    <layer id="layer1" childLayout="center">
      <panel id="dialog" style="nifty-panel" padding="1px,1px,1px,10px" childLayout="center" width="300px" height="100px" align="right" valign="bottom">
        <panel childLayout="vertical" align="center" valign="center">
          <panel id="namePanel" childLayout="horizontal">
            <text id="labelName" style="nifty-label" text="press F1 to toggle console" width="90%" align="left" textVAlign="center" textHAlign="left" />
          </panel>
          <panel childLayout="horizontal" height="8px" />
        </panel>
      </panel>
    </layer>
     <layer id="layer2" childLayout="center">
      <panel id="dialog" style="nifty-panel" padding="1px,1px,1px,10px"
	childLayout="center" width="300px" height="100px" align="left" valign="bottom">
	<panel childLayout="vertical" align="center" valign="center">
          <panel id="namePanel" childLayout="horizontal">
          	<control id="console" name="nifty-console" lines="25" align="center" valign="center">
	        <effect>
	          <onStartScreen name="move" direction="top" mode="in" length="200" startDelay="100" inherit="true" />
	          <onEndScreen name="move" direction="top" mode="out" length="200" startDelay="0" inherit="true" />
	        </effect>
	      </control>
          </panel>
          <panel childLayout="horizontal" height="8px" />
        </panel>
      </panel>
    </layer>
  </screen>

  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- the console popup -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <popup id="consolePopup" childLayout="center" backgroundColor="#000a">
    <effect>
      <onStartScreen name="fade" start="#0" end="#a" length="200" inherit="true" />
      <onEndScreen name="fade" start="#a" end="#0" length="200" startDelay="100" inherit="true" />
    </effect>
    <panel childLayout="center" width="95%" align="center" valign="center">
      <control id="console" name="nifty-console" lines="25" align="center" valign="center">
        <effect>
          <onStartScreen name="move" direction="top" mode="in" length="200" startDelay="100" inherit="true" />
          <onEndScreen name="move" direction="top" mode="out" length="200" startDelay="0" inherit="true" />
        </effect>
      </control>
    </panel>
  </popup>
</nifty>
